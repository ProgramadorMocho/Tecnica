<table summary="Usuarios">
  <caption>Usuarios</caption>
  <thead>
    <tr>
      <th scope="col">Usuario</th>
      <th scope="col">Contraseña</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Ver Más</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%=user.user%></th>
      <td><%=user.password%></td>
      <td><%=user.name%></td>
      <td><%=user.lastname%></td>
      <td><%= link_to "Ver más",user %></td>
    </tr>
</table>

<style>
table {
   width: 70%;
   border: 1px solid #000;
}
caption {
   padding: 0.3em;
   color: #fff;
    background: #000;
}
th, td {
   width: 25%;
   text-align: center;
   vertical-align: top;
   border: 1px solid #000;
}
</style>